# ShakaApiHub 环境变量配置

# 应用配置
NODE_ENV=production
PORT=3000

# Docker 环境标识
DOCKER_ENV=true

# Session 配置
SESSION_SECRET=your-secure-random-secret-key-here

# HTTPS 配置（生产环境）
HTTPS=false

# 数据库配置（通常不需要修改）
# DB_PATH=/app/data/shakaHub.db

# 日志级别
LOG_LEVEL=info

# 备份配置
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true

# 定时检测配置
SCHEDULED_CHECK_INTERVAL=15
SCHEDULED_CHECK_ENABLED=true

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
